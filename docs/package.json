{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "content:split": "node scripts/split-md.mjs",
    "content:build": "node scripts/build-content.mjs",
    "content:check": "node scripts/build-content.mjs --check",
    "content:ui-check": "node scripts/content-ui-check.mjs",
    "predev": "npm run content:build",
    "dev": "vite",
    "prebuild": "npm run content:build",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "preview": "vite preview",
    "test:smoke": "npm run content:check && npm run content:ui-check && npm run lint && npm run test:unit && npm run build",
    "test:full": "npm run test:smoke && npm run test:e2e",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:split": "npm run build && playwright test -g \"split-layout modals\"",
    "test:e2e:headed": "npm run build && playwright test --headed",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:visual": "npm run build && playwright test tests/e2e/visual-regression.spec.ts",
    "test:visual:update": "npm run build && playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "test:a11y": "npm run build && playwright test tests/e2e/a11y-axe.spec.ts",
    "test:lighthouse": "npm run build && node scripts/lighthouse-baseline.mjs",
    "test:all": "npm run test:smoke && npm run test:visual && npm run test:a11y && npm run test:lighthouse"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@axe-core/playwright": "^4.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "chrome-launcher": "^1.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^3.2.4"
  }
}
